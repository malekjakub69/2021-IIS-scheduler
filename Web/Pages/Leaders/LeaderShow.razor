@page "/course/{CourseId:guid}/leader/show"

<style>
    td,th{
        text-align: center;
    }
</style>


<table class="table table-striped">
    <thead>
    <tr class="bg-success">
        <th scope="col">#</th>
        <th scope="col">Jméno</th>
        <th scope="col">Přezdívka</th>
        <th scope="col">Příjmení</th>
        <th scope="col">Vytíženost</th>
    </tr>
    </thead>
    <tbody>
    @if (Leaders != null)
    {
        int index = 0;
        @foreach (var leader in Leaders)
        {
            index++;
            <tr>
                <th scope="row">
                    @index
                </th>
                <td>
                    @leader.Leader.Name
                </td>
                <td>
                    @leader.Leader.Nickname
                </td>
                <td>
                    @leader.Leader.Surname
                </td>
                <td>
                    @leader.Leader.ScheduleData.Count
                </td>
            </tr>
        }
    }
    </tbody>
</table>